@model RecipeManagment.Models.Recipe

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Ingredients</dt>
        <dd>@Model.Ingredients</dd>
        <dt>Instructions</dt>
        <dd>@Model.Instructions</dd>
        <dt>Cuisine Type</dt>
        <dd>@Model.CuisineType</dd>
        <dt>Preparation Time</dt>
        <dd>@Model.PreparationTimeInMinutes</dd>
        <dt>Created Date</dt>
        <dd>@Model.CreatedDate.ToShortDateString()</dd>
        <dt>Metadata</dt>
        <dd>@Model.Metadata</dd>
        <dt>Status</dt>
        <dd>
            @if (Model.IsFavorite)
            {<span class="badge bg-warning text-dark">Fav</span>}
            @if (Model.ToTry)
            {<span class="badge bg-info text-dark">To Try</span>}
            @if (Model.MadeBefore)
            {<span class="badge bg-success">Made Before</span>}
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index", "Recipe")
</p>